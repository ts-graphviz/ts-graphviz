{
  "name": "@ts-graphviz/adapter",
  "version": "2.0.0",
  "description": "",
  "type": "module",
  "main": "lib/node/index.cjs",
  "module": "lib/node/index.js",
  "types": "lib/node/index.d.ts",
  "exports": {
    ".": {
      "browser": {
        "require": "./lib/browser/index.cjs",
        "import": "./lib/browser/index.js",
        "types": "./lib/browser/index.d.ts"
      },
      "deno": {
        "types": "./lib/deno/mod.d.ts",
        "default": "./lib/deno/mod.js"
      },
      "node": {
        "require": "./lib/node/index.cjs",
        "import": "./lib/node/index.js",
        "types": "./lib/node/index.d.ts"
      },
      "default": {
        "types": "./lib/node/index.d.ts",
        "require": "./lib/node/index.cjs",
        "import": "./lib/node/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ts-graphviz/ts-graphviz.git",
    "directory": "packages/adapter"
  },
  "author": "Yuki Yamazaki <yuki@kamiazya.tech>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ts-graphviz/ts-graphviz/issues"
  },
  "homepage": "https://github.com/ts-graphviz/ts-graphviz#readme",
  "dependencies": {
    "@ts-graphviz/common": "^2.0.0"
  },
  "devDependencies": {
    "rollup": "^3.21.5",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-dts": "^5.3.0",
    "typescript": "^5.0.4"
  },
  "scripts": {
    "build:deno": "mkdir -p lib/deno && cp -r src/deno/* lib/deno && sed -i \"s/index.ts/index.js/g\" lib/deno/mod.js && sed -i \"s/index.ts/index.d.ts/g\" lib/deno/mod.d.ts",
    "build:dts": "tsc -p tsconfig.json --declaration",
    "build:js": "tsc -p tsconfig.json --removeComments",
    "build:rollup": "rollup -c rollup.config.js",
    "build": "npm run build:dts && npm run build:js && npm run build:deno && npm run build:rollup",
    "postbuild": "prettier --write ./lib/**/*.{js,cjs,d.ts}"
  }
}
