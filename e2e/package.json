{
  "private": true,
  "type": "module",
  "workspaces": [
    "envs/*"
  ],
  "scripts": {
    "pretest:cjs": "tsc main.ts -m commonjs --outDir envs/cjs/ --target esnext",
    "pretest:esm": "tsc main.ts -m nodenext --outDir envs/esm/ --target esnext",
    "pretest:deno": "cat main.ts | sed s/'ts-graphviz'/'npm:ts-graphviz'/ > envs/deno/main.ts",
    "pretest:webpack-build": "cp main.ts envs/webpack-build/src",
    "pretest": "sh scripts/pretest.sh",
    "test": "yarn workspaces run test"
  },
  "devDependencies": {
    "@types/node": "^18.11.11",
    "typescript": "^4.9.3"
  }
}
