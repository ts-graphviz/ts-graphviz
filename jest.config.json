{
  "preset": "ts-jest/presets/default-esm",
  "testEnvironment": "node",
  "collectCoverage": true,
  "globals": { "ts-jest": { "useESM": true } },
  "extensionsToTreatAsEsm": [".ts"],
  "moduleNameMapper": {
    "^\\#lib\\/(.*)$": "<rootDir>/src/$1",
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "snapshotSerializers": ["jest-snapshot-serializer-raw"]
}
