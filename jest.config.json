{
  "preset": "ts-jest/presets/default-esm",
  "testEnvironment": "node",
  "collectCoverage": true,
  "extensionsToTreatAsEsm": [".ts"],
  "transform": {
    "^.+\\.tsx?$": { "useESM": true }
  },
  "moduleNameMapper": {
    "^\\#lib\\/(.*)$": "<rootDir>/src/$1",
    "^\\#test\\/(.*)$": "<rootDir>/test/$1",
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "snapshotSerializers": ["jest-snapshot-serializer-raw"]
}
