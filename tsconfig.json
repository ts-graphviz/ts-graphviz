{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "outDir": "lib",
    "esModuleInterop": true,
    "moduleResolution": "Node16",
    "skipLibCheck": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/__tests__/**/*"]
}
