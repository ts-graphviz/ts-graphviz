{
  "name": "ts-graphviz-monorepo",
  "private": true,
  "description": "Graphviz libraries for TypeScript",
  "keywords": [
    "graphviz",
    "dot"
  ],
  "homepage": "https://ts-graphviz.github.io/ts-graphviz/",
  "bugs": {
    "url": "https://github.com/ts-graphviz/ts-graphviz/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ts-graphviz/ts-graphviz.git"
  },
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/ts-graphviz"
    },
    {
      "type": "opencollective",
      "url": "https://opencollective.com/ts-graphviz"
    }
  ],
  "license": "MIT",
  "author": "kamiazya <yuki@kamiazya.tech>",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "codegen": "pnpm -r codegen",
    "build": "pnpm -r --workspace-concurrency=4 build",
    "doc": "typedoc",
    "lint": "biome check --write ./**",
    "test": "vitest --no-coverage",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit --strict --skipLibCheck",
    "typecheck:fast": "tsc --noEmit --skipLibCheck",
    "typecheck:strict": "tsc --project tsconfig.packages.json --noEmit --skipLibCheck false",
    "test:e2e": "pnpm --filter @ts-graphviz/e2e test",
    "audit:fix": "pnpm audit --fix",
    "audit:check": "pnpm audit --audit-level=moderate"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.0",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@pnpm/workspace.find-packages": "^1000.0.42",
    "@pnpm/workspace.pkgs-graph": "^1000.0.24",
    "@types/node": "^20.19.23",
    "@types/react": "^19.2.2",
    "@vitest/coverage-v8": "^4.0.3",
    "jsdom": "^27.0.1",
    "lefthook": "^2.0.1",
    "react": "^19.2.0",
    "svgo": "^4.0.0",
    "typedoc": "^0.28.14",
    "typedoc-plugin-mdn-links": "^5.0.10",
    "typescript": "~5.9.3",
    "vite": "^7.1.12",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.3"
  },
  "packageManager": "pnpm@10.12.1",
  "pnpm": {
    "overrides": {
      "form-data@>=4.0.0 <4.0.4": ">=4.0.4",
      "validator@<=13.15.15": ">=13.15.16",
      "on-headers@<1.1.0": ">=1.1.0",
      "cross-spawn@>=7.0.0 <7.0.5": ">=7.0.5"
    },
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "core-js",
      "esbuild",
      "lefthook",
      "snyk"
    ]
  }
}
